{
	"name": "lazer",
	"displayName": "lazer",
	"description": "lazy boy",
	"version": "0.0.1",
	"publisher": "Rainnut",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:fileExplorer"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "lazer",
					"title": "lazer",
					"icon": "src/images/icon.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "lazer.refreshEntry",
					"when": "view == lazer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "lazer.openTemplateConfig",
					"when": "view == lazer && viewItem == menuItem",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "lazer.refreshEntry",
				"title": "刷新",
				"icon": {
					"light": "src/images/light/refresh.svg",
					"dark": "src/images/dark/refresh.svg"
				}
			},
			{
				"command": "lazer.openTemplateConfig",
				"title": "选择该模板",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	},
	"dependencies": {
		"class-transformer": "^0.4.0",
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^0.2.1",
		"mkdirp": "^0.5.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^2.6.2"
	}
}
